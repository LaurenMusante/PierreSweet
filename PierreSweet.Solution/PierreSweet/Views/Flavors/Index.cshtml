@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Flavor>;

<h2>Flavors</h2>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

@foreach (Flavor flavor in Model)
{
  <div class="well">
    <h4>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</h4>
  </div>
}

