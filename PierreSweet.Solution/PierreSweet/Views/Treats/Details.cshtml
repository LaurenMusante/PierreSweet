@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat
@using System.Collections.Generic


<h2>Treat Details</h2>
<hr />
    <h6>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h6>
    <h6>Calories: @Html.DisplayFor(model => model.Calories)</h6>
    <h6>Price: @Html.DisplayFor(model => model.Price)</h6>

    <h3>@switch(Model.Rating)
    {
        case "1":
        <i class="fas fa-heart"></i><i class="fas fa-heart fas-faded"></i><i class="fas fa-heart fas-faded"></i><i class="fas fa-heart fas-faded"></i><i class="fas fa-heart fas-faded"></i>
        break;
        case "2":
        <i class="fas fa-heart"></i><i class="fas fa-heart"></i><i class="fas fa-heart fas-faded"></i><i class="fas fa-heart fas-faded"></i><i class="fas fa-heart fas-faded"></i>
        break;
        case "3":
        <i class="fas fa-heart"></i><i class="fas fa-heart"></i><i class="fas fa-heart"></i><i class="fas fa-heart fas-faded"></i><i class="fas fa-heart fas-faded"></i>
        break;
        case "4":
        <i class="fas fa-heart"></i><i class="fas fa-heart"></i><i class="fas fa-heart"></i><i class="fas fa-heart"></i><i class="fas fa-heart fas-faded"></i>
        break;
        case "5":
        <i class="fas fa-heart"></i><i class="fas fa-heart"></i><i class="fas fa-heart"></i><i class="fas fa-heart"></i><i class="fas fa-heart"></i>
        break;
    }
    </h3>

@if(@Model.Flavors.Count == 0)
{
  <p>We don't know what flavor this treat is yet!</p>
}
else
{
  <div class="flavor-wrap">
  <h4>Flavor this treat belongs to:</h4>
  
  @foreach(var join in Model.Flavors)
  {
    <p>@join.Flavor.Type</p>
    @using (Html.BeginForm("DeleteFlavor", "Treats"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete" class="btn btn-info"/>
    }
  }
  
  </div>
}

<p>@Html.ActionLink("Back to list", "Index", new {}, new {@class = "html-links"}) | @Html.ActionLink("Edit Treat", "Edit", new { id = Model.TreatId }, new {@class = "html-links"}) | @Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId }, new {@class = "html-links"}) | @Html.ActionLink("Add a Flavor", "AddFlavor", new { id = Model.TreatId }, new {@class = "html-links"})</p>
