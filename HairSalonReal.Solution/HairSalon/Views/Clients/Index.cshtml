@{
    Layout = "_Layout";
}
@using HairSalon.Models
@model List<HairSalon.Models.Client>

<h1> Your Current Clients: </h1>
<hr>
@if (@Model.Count == 0)
    {
    <h3>You have not added any clients yet.</h3>
    } 

    @foreach (Client client in Model)
    {
        <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name  </li>
    }

<h2>@Html.ActionLink("Add new client", "Create")</h2>
<h2>@Html.ActionLink("Home", "Index", "Home")</h2>
