@{
    Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Your Current Stylists</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>You have not added any stylists yet.</h3>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}

<h2>@Html.ActionLink("Add new stylist", "Create")</h2>

<h2>@Html.ActionLink("Home", "Index", "Home")</h3>
